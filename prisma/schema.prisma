datasource db {
  provider = "postgresql"
  // CAMBIAMOS EL NOMBRE PARA QUE COINCIDA CON TU ARCHIVO .ENV
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma

// ... (tu datasource y generator se quedan igual)

// Definimos los planes disponibles
enum Plan {
  FREE
  MEDIUM
  BUSINESS
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  password       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // --- NUEVOS CAMPOS PARA PLANES Y L√çMITES ---
  plan           Plan      @default(FREE)
  articleCount   Int       @default(0)
  usageResetDate DateTime  @default(now())
}