datasource db {
  provider = "postgresql"
  // CAMBIAMOS EL NOMBRE PARA QUE COINCIDA CON TU ARCHIVO .ENV
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}